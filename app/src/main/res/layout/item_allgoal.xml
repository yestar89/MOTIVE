<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/liner4"
    android:orientation="horizontal"
    android:layout_marginBottom="18dp"
    android:elevation="1dp">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/square3"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"
                android:text="목표"
                android:contentDescription="목표"
                android:textColor="#000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/goalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="[Test Data]"
                android:textColor="#111111" />
        </LinearLayout>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="날짜 데이터"
            android:textColor="#111111" />

        <TextView
            android:id="@+id/dDayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/pretendard_semibold"
            android:text="D-day 데이터"
            android:textColor="#29169F" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="87dp"
        android:layout_height="89dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:contentDescription="프로그레스바">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="100"
            android:progressBackgroundTint="#d9d9d9"
            android:progressDrawable="@drawable/circle_progressbar"
            android:progressTint="#FA4756"
            android:textColor="#111111" />

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0%"
            android:textColor="#111111" />

    </FrameLayout>

</LinearLayout>
