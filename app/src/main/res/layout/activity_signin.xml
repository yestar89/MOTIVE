<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.Signin">

  <!-- motive 로고 -->


  <!--로그인 버튼-->
  <ImageView
      android:id="@+id/imageView"
      android:layout_width="300dp"
      android:layout_height="48dp"
      android:layout_gravity="center"
      android:layout_marginStart="20dp"
      android:layout_marginTop="124dp"
      android:layout_marginEnd="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.492"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/motive" />

  <Button
      android:id="@+id/btn_sign"
      android:layout_width="match_parent"
      android:layout_height="58dp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:text="로그인"
      android:textColor="#FFFFFF"
      android:background="@drawable/sign_login"
      android:textSize="20sp"
      android:fontFamily="@font/pretendard_semibold"
      android:layout_marginTop="38dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/sign_pass" />


  <!-- 회원가입-->
  <TextView
      android:id="@+id/nowSignupfirst"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="100dp"
      android:layout_marginTop="130dp"
      android:layout_marginEnd="20dp"
      android:text="모티브가 처음이신가요?"
      android:fontFamily="@font/pretendard_medium"
      android:textColor="#979797"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn_sign" />

  <TextView
      android:id="@+id/nowSignup"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="250dp"
      android:layout_marginTop="130dp"
      android:layout_marginEnd="20dp"
      android:gravity="center"
      android:text="회원가입"
      android:fontFamily="@font/pretendard_semibold"
      android:textColor="#A1A1A1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn_sign" />


  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="22dp"
      android:layout_marginTop="18dp"
      android:lineSpacingExtra="10sp"
      android:textColor="#111111"
      android:textSize="18sp"
      android:fontFamily="@font/pretendard_semibold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/sign_id"
      tools:ignore="MissingConstraints"
      android:text="비밀번호 " />


  <!-- 비밀번호 작성란 -->
  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/sign_pass"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="56dp"
      android:layout_marginEnd="20dp"
      android:ems="10"
      android:hint="비밀번호를 입력해주세요."
      android:background="@drawable/sign_id"
      android:textColorHint="#979797"
      android:inputType="textPassword"
      android:padding="15dp"
      android:fontFamily="@font/pretendard_regular"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/sign_id" />


  <!-- 아이디 -->
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="22dp"
      android:layout_marginTop="75dp"
      android:lineSpacingExtra="10sp"
      android:textColor="#111111"
      android:textSize="18sp"
      android:fontFamily="@font/pretendard_semibold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView"
      tools:ignore="MissingConstraints"
      android:text="아이디"/>

  <!--아이디 작성란 -->
  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/sign_id"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="110dp"
      android:layout_marginEnd="20dp"
      android:background="@drawable/sign_id"
      android:ems="10"
      android:fontFamily="@font/pretendard_regular"
      android:hint="이메일 주소를 입력해주세요."
      android:textColorHint="#979797"
      android:padding="15dp"
      android:inputType="textPersonName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView" />


  <ProgressBar
      android:id="@+id/progressBar"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginTop="100dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>